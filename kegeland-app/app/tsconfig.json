// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "ES6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": [
      "node",
      "jest",
      "react"
    ],
    "paths": {
      "~assets/*": [
        "./assets/*"
      ],
      "~components/*": [
        "./src/components/*"
      ],
      "~constants/*": [
        "./src/constants/*"
      ],
      "~containers/*": [
        "./src/containers/*"
      ],
      "~hoc/*": [
        "./src/hoc/*"
      ],
      "~hooks/*": [
        "./src/hooks/*"
      ],
      "~lib/*": [
        "./src/lib/*"
      ],
      "~routes/*": [
        "./src/routes/*"
      ],
      "~state/*": [
        "./src/state/*"
      ],
      "~utils/*": [
        "./src/utils/*"
      ],
      "~views/*": [
        "./src/views/*"
      ],
      "*": [
        "src/*",
        "typings/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
